#include <iostream>
using namespace std;
#include "header.h"

int main()
{
	int size;
	srand(time(0));
	cout << " Enter size ";
	cin >> size;
	int* arr = new int[size];
	fillarr(arr, size);
	printArr(arr, size);
	int countEven = onlydot(arr, size);
	if (countEven > 0)
	{
		int* new_arr = new int[countEven];
		fillEvenElements(arr, size, new_arr);
		printArr(new_arr, countEven);
		delete[] new_arr;
	}



	int countEven2 = onlyot(arr, size);
	if (countEven > 0)
	{
		int* new_arr = new int[countEven2];
		fillEvenElementsminus(arr, size, new_arr);
		printArr(new_arr, countEven2);

		delete[] new_arr;
	}

	delete[] arr;
}











#pragma once
#include <iostream>
using namespace std;

void printArr(int* arr, int size)
{
	for (int i = 0; i < size; i++)
	{
		cout << arr[i] << ' ';
	}
	cout << '\n';
}

void fillarr(int* arr, int size, int min = -10, int max = 10)
{
	for (int i = 0; i < size; i++)
	{
		arr[i] = rand() % (max - min) + min;
	}
}

int onlydot(int* arr, int size)
{
	int CountEven = 0;
	for (int i = 0; i < size; i++)
	{
		if(arr[i] > 0)
		{
			CountEven++;
		}
	}
	return CountEven;
}



int onlyot(int* arr, int size)
{
	int CountEven2 = 0;
	for (int i = 0; i < size; i++)
	{
		if(arr[i] < 0)
		{
			CountEven2++;
		}
	}
	return CountEven2;
}

void fillEvenElementsminus(int* arr, int size, int* new_arr)
{
	int k = 0;
	for (int i = 0; i < size; i++)
	{

		if (arr[i] < 0)
		{
			new_arr[k] = arr[i];
			k++;
		}
	}
}


void fillEvenElements(int* arr, int size, int* new_arr)
{
	int k = 0;
	for (int i = 0; i < size; i++)
	{

		if (arr[i] > 0)
		{
			new_arr[k] = arr[i];
			k++;
		}
	}
}
